---
import '/src/styles/style.css';
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Usuarios - Rhenania</title>
  </head>
  <body>
    <main>
      <h1>Usuarios - Rhenania</h1>
      <button onclick="window.history.back();">Volver</button>

      <!-- Barra de búsqueda -->
      <div id="search-container">
        <select id="filter-select">
          <option value="id">ID</option>
          <option value="nombre">Nombre</option>
          <option value="apellido">Apellido</option>
          <option value="usuario">Usuario</option>
          <option value="email">Correo</option>
        </select>
        <input type="text" id="search-input" placeholder="Buscar..." />
      </div>

      <table id="user-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
          </tr>
        </thead>
        <tbody id="user-table-body">
          <!-- Las filas se generarán dinámicamente -->
        </tbody>
      </table>

      <!-- Modal para mostrar los datos adicionales -->
      <div id="modal" style="display: none;">
        <div class="modal-overlay">
          <div class="modal-content">
            <p><strong>Usuario:</strong> <span id="modal-username"></span></p>
            <p><strong>Email:</strong> <span id="modal-email"></span></p>
            <button onclick="closeModal()">Cerrar</button>
          </div>
        </div>
      </div>
    </main>
    <script type="module" src="/src/scripts/config/usuarios.js"></script>
  </body>
</html>
